<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.OfferedJobsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button android:id="@+id/btnSortEducation"
            android:layout_width="match_parent"

            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/education_sort"/>

        <Button android:id="@+id/btnSortExperience"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            android:layout_height="wrap_content"
            android:text="@string/experience_sort"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list"></ListView>

</LinearLayout>